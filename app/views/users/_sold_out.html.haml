.main-sold-out
  .sold-out
    .sold-out__first
      出品した商品
    .sold-out__second
      .sold-out__second--left
        = link_to(exhibiting_user_url(current_user), class: "sold-out__second--left__btn") do
          出品中
      .sold-out__second--center
        = link_to(transaction_user_url(current_user), class: "sold-out__second--center__btn") do
          取引中
      .sold-out__second--right
        = link_to(sold_user_url(current_user), class: "sold-out__second--right__btn") do
          売却済み
      - if products_url == nil
        .sold-out__third
          売却済みの商品がありません
      - else
        .containerBrand__product--lists
          - current_user.products.where(status: 1).each do |product|
            = link_to product_path(product), class: "listBtn" do
              %figure.product__images
                = image_tag product.images[0].name.url, alt: "image_url",size: "200x150", class:"new-img"
              .containerBrand__product--lists__list--body
                %h3.product--name
                  = product.name
                .containerBrand__product--lists__list--body__details
                  %ul.details__menu
                    %li
                      = product.price
                      円
                    %li ★
                %p.taxIncluded （税込）
    .sold-out__forth
      = link_to("#", class: "left-btn") do
        %i.left-btn.fa.fa-chevron-left
      = link_to("#", class: "right-btn") do
        %i.right-btn.fa.fa-chevron-right
