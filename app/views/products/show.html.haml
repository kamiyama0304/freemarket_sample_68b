.backcolor-box 
  .details-in-box
    .detail
      .detail--name
        product1
      %ul.detail--main-img
        %li
          = image_tag "https://s3-ap-northeast-1.amazonaws.com/mercarimaster/uploads/captured_image/content/13/a007.png", class: "detail--main-img--image"
          %ul
            %li
              = image_tag "https://s3-ap-northeast-1.amazonaws.com/mercarimaster/uploads/captured_image/content/13/a007.png", size: "140x140" , class: "show-img"
            %li
              = image_tag "https://s3-ap-northeast-1.amazonaws.com/mercarimaster/uploads/captured_image/content/13/a007.png", size: "140x140" , class: "show-img"
            %li
              = image_tag "https://s3-ap-northeast-1.amazonaws.com/mercarimaster/uploads/captured_image/content/13/a007.png", size: "140x140" , class: "show-img"
      .detail--price
        ¥ 10000
      .detail--price-description
        (税込) 送料込み
      .detail--item-name
        product1
      .detail__table
        %table
          %tbody
            %tr
              %th
                出品者
              %td
                誰かさん
            %tr
              %th
                カテゴリー
              %td
                = link_to "#" do
                  レディース
                  %br
                = link_to "#" do
                  トップス
                  %br
                = link_to "#" do
                  Tシャツ/カットソー(半袖/袖なし)
            %tr
              %th
                ブランド
              %td
                ”仮置き表示”
            %tr
              %th
                商品のサイズ
              %td
                ”仮置き表示”
            %tr
              %th
                商品の状態
              %td
                新品/未使用
            %tr
              %th
                配送料の負担
              %td
                送料込み(出品者負担)
            %tr
              %th
                発送元の地域
              %td
                = link_to "#" do
                  青森県
            %tr
              %th
                発送日の目安
              %td
                1~2日で発送
  .links
    .links__around
      = link_to "#", class: "links__around--ahead" do
        < 前の商品
      = link_to "#", class: "links__around--behind" do
        後ろの商品 >
    .links__category
      = link_to "#", class: "links__category--related" do
        レディースをもっと見る

